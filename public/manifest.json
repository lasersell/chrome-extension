{
  "manifest_version": 3,
  "name": "LaserSell",
  "version": "0.1.0",
  "description": "LaserSell telemetry dashboard.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icon16.png",
      "32": "assets/icon32.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["sidePanel", "storage"],
  "host_permissions": [
    "https://telemetry.lasersell.app/*"
  ],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "icons": {
    "16": "assets/icon16.png",
    "32": "assets/icon32.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "default-src 'self'; script-src 'self'; object-src 'none'; base-uri 'self'; connect-src https://telemetry.lasersell.app; img-src 'self' https://images.lasersell.app; style-src 'self' 'unsafe-inline'; frame-ancestors 'none'"
  }
}
