{
  "manifest_version": 3,
  "name": "LaserSell",
  "version": "0.1.0",
  "description": "Lasersell side panel dashboard.",
  "permissions": ["sidePanel", "storage"],
  "action": {
    "default_title": "LaserSell",
    "default_icon": {
      "16": "assets/icon16.png",
      "32": "assets/icon32.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  "icons": {
    "16": "assets/icon16.png",
    "32": "assets/icon32.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["http://127.0.0.1:17777/*"],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src ws://127.0.0.1:17777;"
  }
}
